{
  "version": 2,
  "builds": [
    {
      "src": "api/index.js",
      "use": "@vercel/node"
    },
    {
      "src": "frontend/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "api/index.js"
    },
    {
      "src": "/assets/(.*)\\.js",
      "headers": { "content-type": "application/javascript" },
      "dest": "frontend/assets/$1.js"
    },
    {
      "src": "/(.*)\\.js$",
      "headers": { "content-type": "application/javascript" },
      "dest": "frontend/$1.js"
    },
    {
      "src": "/(.*)\\.mjs$",
      "headers": { "content-type": "application/javascript" },
      "dest": "frontend/$1.mjs"
    },
    {
      "src": "/(.*)\\.ts$",
      "headers": { "content-type": "application/javascript" },
      "dest": "frontend/$1.ts"
    },
    {
      "src": "/(.*)\\.tsx$",
      "headers": { "content-type": "application/javascript" },
      "dest": "frontend/$1.tsx"
    },
    {
      "src": "/(.*)\\.js\\?v=.*",
      "headers": { "content-type": "application/javascript" },
      "dest": "frontend/$1.js"
    },
    {
      "src": "/(.*)\\.ts\\?v=.*",
      "headers": { "content-type": "application/javascript" },
      "dest": "frontend/$1.ts"
    },
    {
      "src": "/(.*)\\.tsx\\?v=.*",
      "headers": { "content-type": "application/javascript" },
      "dest": "frontend/$1.tsx"
    },
    {
      "src": "/assets/(.*)",
      "dest": "frontend/assets/$1"
    },
    {
      "src": "/vite.svg",
      "dest": "frontend/vite.svg"
    },
    {
      "src": "/(.*)\\.svg$",
      "headers": { "content-type": "image/svg+xml" },
      "dest": "frontend/$1.svg"
    },
    {
      "src": "/(.*)",
      "dest": "frontend/$1"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
} 