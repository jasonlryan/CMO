{
  "version": 2,
  "builds": [
    {
      "src": "api/index.js",
      "use": "@vercel/node"
    },
    {
      "src": "frontend/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "api/index.js"
    },
    {
      "src": "/(.*)\\.js$",
      "headers": { "content-type": "application/javascript" },
      "dest": "frontend/$1.js"
    },
    {
      "src": "/(.*)\\.mjs$",
      "headers": { "content-type": "application/javascript" },
      "dest": "frontend/$1.mjs"
    },
    {
      "src": "/(.*)",
      "dest": "frontend/$1"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
} 